<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kristinfinalproject.aleademo.ServiceActivity">

    <TextView
        android:id="@+id/activity_service_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Waiting"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_alignParentTop="true" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="111dp"
        android:layout_below="@+id/activity_service_tv"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/activity_service_start"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Start Service"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/activity_service_stop"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Stop Service"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="30sp"/>
    </LinearLayout>

</RelativeLayout>
